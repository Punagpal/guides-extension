{
    "id": "review_toolbar",
    "component": "div",
    "items": [
        {
            "component": "blockGroup",
            "items": [
                {
                    "component": "button",
                    "icon": "adobeExperienceManagerV2",
                    "extraclass": "pointer-events-none",
                },
                {
                    "component": "buttonGroup",
                    "extraclass": "close-button-group",
                    "items": [
                        {
                            "component": "button",
                            "label": "Close",
                            "extraclass": "close-button",
                            "on-click": "close"
                        }
                    ]
                }
            ],
            "extraclass": "navbar spectrum--darkest"
        },
        {
            "component": "div",
            "extraclass": "review-toolbar",
            "hide": "@actionsDisabled",
            "items": [
                {
                    "component": "div",
                    "extraclass": "review-title",
                    "items": [
                        {
                            "component": "label",
                            "label": "@reviewTitle",
                            "extraclass": "overflow-ellipses",
                            "title": "@reviewTitle"
                        }
                    ]
                },
                {
                    "component": "buttonGroup",
                    "extraclass": "view-button-group",
                    "items": [
                        {
                            "component": "button",
                            "show": "@showDocumentSwitch",
                            "label": "Show Document View",
                            "extraclass": "view-button",
                            "variant": "action",
                            "on-click": "switchView"
                        },
                        {
                            "component": "button",
                            "label": "@documentPreviewLabel",
                            "extraclass": "preview-button",
                            "variant": "action",
                            "on-click": "switchPreview"
                        }
                    ]
                }
            ]
        }
    ]
}