{
    "id": "inline_review_panel",
    "component": "blockGroup",
    "extraclass": "inline-review-panel",
    "items": [
        {
            "component": "div",
            "extraclass": "panel-header",
            "items": [ { "component": "label", "label": "Comments"} ]
        },
        {
            "component": "blockGroup",
            "extraclass": ["empty-panel", "empty-topics", "empty-comments"],
            "show": "@noReview",
            "items": [
                {
                    "component": "icon",
                    "icon": "newComment"
                },
                {
                    "component": "label",
                    "extraclass": "sub-heading",
                    "label": "Select a review task to see the comments"
                }
            ]
        },
        {
            "component": "blockGroup",
            "extraclass": "review",
            "hide": "@noReview",
            "items": [
                {
                    "component": "blockGroup",
                    "extraclass": "review-toolbar",
                    "items": [
                        {
                            "component": "buttonGroup",
                            "extraclass": "review-panel-buttons",
                            "value": "@selectedButtonValue",
                            "items": [
                                {
                                    "component": "button",
                                    "icon": "revert",
                                    "variant": "action",
                                    "quiet": true,
                                    "title": "Revert topic to review version",
                                    "on-click": "revertToReviewVersion"
                                },
                                {
                                    "component": "button",
                                    "icon": "compare",
                                    "variant": "action",
                                    "quiet": true,
                                    "title": "Side by side view",
                                    "value": "preview",
                                    "on-click": "togglePreview"
                                },
                                {
                                    "component": "button",
                                    "icon": "experienceImport",
                                    "variant": "action",
                                    "hide": "@reviewCompleted",
                                    "quiet": true,
                                    "title": "Import comments into author view",
                                    "on-click": "importComments"
                                },
                                {
                                    "component": "button",
                                    "icon": "downloadFromCloud",
                                    "variant": "action",
                                    "quiet": true,
                                    "title": "Download all attachments",
                                    "on-click": "downloadAttachment"
                                }
                            ]
                        },
                        {
                            "component": "div",
                            "extraclass": ["info"],
                            "items": [
                                {
                                    "component": "button",
                                    "icon": "infoOutline",
                                    "quiet": true,
                                    "variant":"action",
                                    "on-click": "showInfo",
                                    "label": "Review details"
                                }
                            ]
                        }
                    ]
                },
                {
                    "component": "div",
                    "extraclass":  "review-top-box",
                    "items": [
                        {
                            "component": "search",
                            "extraclass": "search-box",
                            "placeholder": "Search",
                            "on-keydown": [ { "name": "doSearch", "eventArgs": { "keys": [ "ENTER" ] } } ],
                            "on-change": "doSearch",
                            "variant": "action",
                            "data": "@searchTerm"
                        },
                        {
                            "component": "button",
                            "extraclass": "@filterButtonClass",
                            "icon": "filter",
                            "variant": "action",
                            "quiet": true,
                            "title": "Filter comments",
                            "on-click": "filterComments"
                        }
                    ]
                },
                {
                    "component": "div",
                    "extraclass": "review-comments",
                    "data": "@filteredItems",
                    "uniqKey": "uniqKey",
                    "itemConfig": {
                        "component": "widget",
                        "id": "review_comment",
                        "showOptions" : false,
                        "hideAddAttachment" : false,
                        "hideCancelButton" : false
                    }
                }
            ]
        }
    ]
}