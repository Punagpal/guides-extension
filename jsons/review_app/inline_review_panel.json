{
    "id": "inline_review_panel",
    "component": "blockGroup",
    "extraclass": "inline-review-panel",
    "items": [
        {
            "component": "div",
            "extraclass": "panel-header",
            "items": [
                {
                    "component": "label",
                    "label": "Comments"  // extraclass
                }
            ]
        },
        {
            "component": "blockGroup",
            "extraclass": [
                "empty-panel",
                "empty-topics",
                "empty-comments"
            ],
            "show": "@noReview",
            "items": [
                {
                    "component": "icon",
                    "icon": "newComment"  // extraclass
                },
                {
                    "component": "label",
                    "extraclass": "sub-heading",
                    "label": "Select a review task to see the comments"
                }
            ]
        },
        {
            "component": "blockGroup",
            "extraclass": "review",
            "hide": "@noReview",
            "items": [
                {
                    "component": "blockGroup",
                    "extraclass": "review-toolbar",
                    "items": [
                        {
                            "component": "buttonGroup",
                            "extraclass": "review-panel-buttons",
                            "value": "@selectedButtonValue",
                            "items": [
                                {
                                    "component": "button",
                                    "icon": "revert",
                                    "title": "Revert topic to review version", // extraclass
                                    "on-click": "revertToReviewVersion"
                                },
                                {
                                    "component": "button",
                                    "icon": "compare",   // extraclass
                                    "title": "Side by side view",
                                    "value": "preview",
                                    "on-click": "togglePreview"
                                },
                                {
                                    "component": "button",
                                    "icon": "experienceImport",
                                    "hide": "@reviewCompleted",  //remove?
                                    "title": "Import comments into author view",
                                    "on-click": "importComments"
                                },
                                {
                                    "component": "button",
                                    "icon": "downloadFromCloud",
                                    "title": "Download all attachments",
                                    "on-click": "downloadAttachment" // extraclass
                                }
                            ]
                        },
                        {
                            "component": "div",
                            "extraclass": [
                                "info"
                            ],
                            "items": [
                                {
                                    "component": "button",
                                    "icon": "infoOutline",
                                    "on-click": "showInfo",
                                    "label": "Review details" // extraclass
                                }
                            ]
                        }
                    ]
                },
                {
                    "component": "div",
                    "extraclass": "review-top-box",
                    "items": [
                        {
                            "component": "search",
                            "extraclass": "search-box",
                            "placeholder": "Search",
                            "on-keydown": [
                                {
                                    "name": "doSearch",
                                    "eventArgs": {
                                        "keys": [
                                            "ENTER"
                                        ]
                                    }
                                }
                            ],
                            "on-change": "doSearch",
                            "data": "@searchTerm"
                        },
                        {
                            "component": "button",
                            "extraclass": "@filterButtonClass",
                            "icon": "filter",
                            "title": "Filter comments",
                            "on-click": "filterComments"
                        }
                    ]
                },
                {
                    "component": "div",
                    "extraclass": "review-comments",
                    "data": "@filteredItems",
                    "uniqKey": "uniqKey",
                    "itemConfig": {
                        "component": "widget",
                        "id": "review_comment",
                        "showOptions": false,
                        "hideAddAttachment": false,
                        "hideCancelButton": false
                    }
                }
            ]
        }
    ]
}